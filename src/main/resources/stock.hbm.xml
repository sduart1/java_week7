<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "Stock" table = "stocksjaxb">
      
      <meta attribute = "class-description">
         This class contains the stock info. 
      </meta>
      
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <property name = "value" column = "value" type = "int"/>
      <property name = "symbol" column = "symbol" type = "string"/>
      <property name = "price" column = "price" type = "string"/>
      <property name = "time" column = "time" type = "string"/>
      
   </class>
</hibernate-mapping>